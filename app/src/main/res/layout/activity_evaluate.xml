<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ordermeal.Evaluate">
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="42dp"
    android:background="#0096FF">
    <View
        android:layout_width="10dp"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/esc"
        android:layout_width="51dp"
        android:layout_height="40dp"
        android:src="@drawable/esc" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="评价"
        android:textSize="30dp"/>

</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#dad8d8"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总体"
            android:textSize="40dp" />

        <RatingBar
            android:id="@+id/food_grace1"
            style="style ratingBarStyleIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:progressTint="#dfc608"
            android:numStars="5"
            android:rating="0"
            android:stepSize="0.5" />
    </LinearLayout>
    <View
        android:id="@+id/view_1"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:visibility="gone"
        android:background="#dad8d8"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/food_grace22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="味道"
            android:textSize="20dp"/>

        <RatingBar
            android:id="@+id/food_grace2"
            style="@style/RadingStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:progressTint="#dfc608"
            android:visibility="gone"
            android:numStars="5"
            android:rating="0"
            android:stepSize="0.5" />
    </LinearLayout>
    <View
        android:id="@+id/view_2"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="20dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/food_grace33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="环境"
            android:textSize="20dp"/>

        <RatingBar
            android:id="@+id/food_grace3"
            style="@style/RadingStyle"
            android:progressTint="#dfc608"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            android:numStars="5"
            android:rating="0"
            android:stepSize="0.5" />
    </LinearLayout>
    <View
        android:id="@+id/view_3"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="20dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/food_grace44"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分量"
            android:visibility="gone"
            android:textSize="20dp"/>

        <RatingBar
            android:id="@+id/food_grace4"
            style="@style/RadingStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            android:numStars="5"
            android:rating="0"
            android:stepSize="0.5"
            android:progressTint="#dfc608"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#dad8d8"/>
    <EditText
        android:id="@+id/edit_text1"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:gravity="top|left"
        android:hint="亲，觉得味道如何？价格合理吗？还有什么需要改进的吗？我们会认真查看你的评论，给你提供更优质的服务。"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#dad8d8"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人均    "
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/edit_text2"
            android:background="@null"
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            android:hint="请输入消费金额"/>


    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="20dp"/>
    <TextView
        android:id="@+id/isue"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/login_btn"
        android:text="发布"
        android:layout_gravity="center"
        android:paddingLeft="@dimen/margin_30dp"
        android:paddingRight="@dimen/margin_30dp"
        android:paddingTop="@dimen/padding_10dp"
        android:paddingBottom="@dimen/padding_10dp"
        android:textColor="@color/main_white_text"
        android:layout_marginRight="@dimen/margin_10dp"
        />
</LinearLayout>
