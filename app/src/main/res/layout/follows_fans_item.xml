<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="70dp">
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#e9e9e9"
        android:layout_gravity="center"
        ></View>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#e9e9e9"
        android:layout_gravity="center"
        ></View>
    <RelativeLayout
        android:id="@+id/follow_fans_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <ImageView
            android:id="@+id/follow_fans_head_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/tab_my_normal"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/follow_fans_head_image"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/follow_fans_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名"
                    android:textColor="#454444"
                    android:textSize="20sp"
                    />
                <ImageView
                    android:id="@+id/follow_fans_six"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/icon_boy"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/follow_fans_school"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学校"
                android:textSize="15sp"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/follw_fans_mutual_concern"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="互相关注"
            android:textSize="18sp"
            android:textColor="#e6c704"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="15dp"
            />
    </RelativeLayout>
</LinearLayout>