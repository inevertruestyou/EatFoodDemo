<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d3d0d0">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#0096FF">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="我的"
            android:textColor="#000000" />
    </android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:id="@+id/myself_person_message"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="0dp"
        android:background="@color/text_white"
    >
    <ImageView
        android:id="@+id/myself_head_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:src="@drawable/xiaotang"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="80dp"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/myself_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="小堂堂"
            android:textSize="20sp"
            android:textColor="@color/bg_black"
            />
        <TextView
            android:id="@+id/myself_personalized_signature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="个性签名"
            />
    </LinearLayout>
    <Button
        android:id="@+id/myself_intent_person"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="15dp"
        android:background="@mipmap/icon_more"
        />
</RelativeLayout>
    <RelativeLayout
        android:id="@+id/myself_order_relative"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="@color/text_white"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/icon_order"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_centerVertical="true"
            android:text="订单"
            android:textColor="@color/bg_black"
            android:textSize="20sp"
            />
    </RelativeLayout>
    <View
        android:layout_width="360dp"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_gravity="center"
        ></View>
    <RelativeLayout
        android:id="@+id/myself_friend_revative"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/text_white"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/icon_friend"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:text="饭友"
            android:textColor="@color/bg_black"
            android:textSize="20sp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/myself_setup_relative"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="@color/text_white">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/icon_setup_bluee"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:text="设置"
            android:textSize="20sp"
            android:textColor="@color/bg_black"
            />
    </RelativeLayout>
</LinearLayout>