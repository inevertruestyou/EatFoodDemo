<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="40dp">

       <TextView
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:text="吃堂结算平台"
           android:gravity="center"
           android:textSize="25sp"
           android:background="#0096FF"/>

   </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/get_food_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="你订购了:"
            android:textColor="#000000"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </android.support.v7.widget.RecyclerView>



    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/get_food_price"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="请选择支付方式:(测试：点击图片支付成功）"
            android:textColor="@color/bg_black"/>



    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_10dp"
    android:orientation="horizontal"
    android:gravity="center">
    <Button
        android:id="@+id/alipay"
        android:layout_width="@dimen/margin_50dp"
        android:layout_height="50dp"
        android:background="@mipmap/alipay"/>
    <View
        android:layout_width="@dimen/margin_20dp"
        android:layout_height="match_parent"/>

    <Button
        android:id="@+id/weichat"
        android:layout_width="@dimen/margin_50dp"
        android:layout_height="50dp"
        android:background="@mipmap/wechat"/>
    <View
        android:layout_width="@dimen/margin_20dp"
        android:layout_height="match_parent"/>
    <Button
        android:id="@+id/qq_pay"
        android:layout_width="@dimen/margin_50dp"
        android:layout_height="50dp"
        android:background="@mipmap/qq"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/get_food_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="取消支付"
            android:layout_margin="@dimen/margin_10dp"
            android:background="#0096FF"/>


    </LinearLayout>

</LinearLayout>
