<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:scrollbars="vertical"
    android:fadingEdge="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbarStyle="outsideInset"
        android:scrollbars="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:background="#0096FF">

            <Button
                android:id="@+id/personal_show_back_myself"
                android:layout_width="35dp"
                android:layout_height="25dp"
                android:layout_margin="15dp"
                android:background="@mipmap/back1" />

            <RelativeLayout
                android:id="@+id/personal_show_allmessage"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_centerVertical="true">

                <ImageView
                    android:id="@+id/personal_show_head_image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/xiaotang" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/personal_show_head_image"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/personal_show_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="小堂堂"
                        android:textColor="@color/bg_black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/personal_show_personalized_signature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="个性签名"
                        android:textColor="#1e1e1e"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/personal_show_six"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="性别"
                            android:textColor="#1e1e1e"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/personal_show_constellation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="星座"
                            android:textColor="#1e1e1e"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/personal_show_entrance_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="加入时间"
                            android:textColor="#1e1e1e"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/personal_show_allmessage">

                <RelativeLayout
                    android:layout_width="270dp"
                    android:layout_height="45dp"
                    android:layout_centerHorizontal="true">

                    <RelativeLayout
                        android:id="@+id/personal_show_follow"
                        android:layout_width="90dp"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/personal_show_follow_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="0"
                            android:textColor="@color/bg_black"
                            android:textSize="15dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="17dp"
                            android:text="关注"
                            android:textColor="@color/bg_black"
                            android:textSize="15dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/personal_show_fans"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true">

                        <TextView
                            android:id="@+id/personal_show_fans_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="0"
                            android:textColor="@color/bg_black"
                            android:textSize="15dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="17dp"
                            android:text="粉丝"
                            android:textColor="@color/bg_black"
                            android:textSize="15dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/personal_show_evaluate"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true">

                        <TextView
                            android:id="@+id/personal_show_evaluate_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="0"
                            android:textColor="@color/bg_black"
                            android:textSize="15dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="17dp"
                            android:text="评价"
                            android:textColor="@color/bg_black"
                            android:textSize="15dp" />
                    </RelativeLayout>

                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>
</ScrollView>